<% include ../partials/header %>

<div class="container-fluid">
    <div class="row">
        <div class="new-form">
<form action="/games" method="POST">
    
  <div class="form-group">
    <label for="exampleFormControlInput1">Oyunun Adı</label>
    <input type="text" class="form-control" id="exampleFormControlInput1" name="name" placeholder="Oyunun Adı" required> 
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput1">ST E-posta</label>
    <input type="email" class="form-control" id="exampleFormControlInput1" name="email" placeholder="st@gmail.com"> 
  </div>
  
  <div class="form-group">
    <label for="exampleFormControlInput1">Oyun Başlama Tarihi</label>
    <input type="date" class="form-control" id="exampleFormControlInput1" name="date" placeholder="31/03/1987"> 
  </div>
  
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Oyunun Açıklaması</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" placeholder="Oyunun Kısa Açıklaması"></textarea>
  </div>
  
  <button type="submit" class="btn btn-outline-dark btn-lg float-right">Kaydet</button>
</form>
</div></div></div>

